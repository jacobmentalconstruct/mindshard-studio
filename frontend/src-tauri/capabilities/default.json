{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default permissions for the main application window.",
  "windows": ["main"],
  "permissions": [
    "core:app:default",
    "core:window:default",
    "core:webview:default",
    "core:event:default",
    "core:image:default",
    "core:menu:default",
    "core:path:default",
    "core:tray:default",
    "dialog:allow-open",
    {
      "identifier": "fs:read-dir",
      "allow": [
        "$HOME/*",
        "$DESKTOP/*",
        "$DOCUMENT/*",
        "$DOWNLOAD/*"
      ]
    }
  ]
}
